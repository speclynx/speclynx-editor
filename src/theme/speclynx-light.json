    "input.border": "#D1D5DB",
    "input.placeholderForeground": "#9CA3AF",
    "inputOption.activeBorder": "#449ccf",
    "focusBorder": "#449ccf",

    "button.background": "#449ccf",
    "button.foreground": "#FFFFFF",
