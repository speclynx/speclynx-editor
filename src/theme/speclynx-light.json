    "peekView.border": "#449ccf",
    "peekViewEditor.background": "#FAFBFC",
    "peekViewResult.background": "#F3F4F6",
    "peekViewTitle.background": "#EFF6FF",

    "gitDecoration.modifiedResourceForeground": "#449ccf",
    "gitDecoration.addedResourceForeground": "#059669",
    "gitDecoration.deletedResourceForeground": "#DC2626",
    "gitDecoration.untrackedResourceForeground": "#059669",

    "debugToolBar.background": "#FFFFFF",
    "progressBar.background": "#449ccf",

    "textLink.foreground": "#449ccf",
    "textLink.activeForeground": "#163657",
    "descriptionForeground": "#6B7280",
    "icon.foreground": "#449ccf",

    "welcomePage.background": "#FAFBFC",
    "walkThrough.embeddedEditorBackground": "#F3F4F6"
  },
  "tokenColors": [
    {
      "name": "Comments",
      "scope": ["comment", "punctuation.definition.comment"],
      "settings": { "foreground": "#9CA3AF", "fontStyle": "italic" }
    },
    {
      "name": "Strings",
      "scope": ["string", "string.quoted"],
      "settings": { "foreground": "#059669" }
    },
    {
      "name": "Numbers",
      "scope": ["constant.numeric"],
      "settings": { "foreground": "#7C3AED" }
    },
    {
      "name": "Booleans",
      "scope": ["constant.language.boolean"],
      "settings": { "foreground": "#7C3AED" }
    },
    {
      "name": "Null",
      "scope": ["constant.language.null", "constant.language.undefined"],
      "settings": { "foreground": "#7C3AED", "fontStyle": "italic" }
    },
    {
      "name": "Keywords",
      "scope": ["keyword", "keyword.control", "storage.type"],
      "settings": { "foreground": "#163657" }
    },
    {
      "name": "Operators",
      "scope": ["keyword.operator"],
      "settings": { "foreground": "#4B5563" }
    },
    {
      "name": "Functions",
      "scope": ["entity.name.function", "support.function"],
      "settings": { "foreground": "#0369A1" }
    },
    {
      "name": "Classes & Types",
      "scope": ["entity.name.type", "entity.name.class", "support.type"],
      "settings": { "foreground": "#0E7490" }
    },
    {
      "name": "Variables",
      "scope": ["variable", "variable.other"],
      "settings": { "foreground": "#1F2937" }
    },
    {
      "name": "Parameters",
      "scope": ["variable.parameter"],
      "settings": { "foreground": "#4B5563", "fontStyle": "italic" }
    },
    {
      "name": "Properties / Keys",
      "scope": ["support.type.property-name", "entity.name.tag.yaml", "entity.other.attribute-name"],
      "settings": { "foreground": "#449ccf" }
    },
    {
      "name": "YAML Tags & Anchors",
      "scope": ["entity.name.tag.yaml", "keyword.control.flow.block-scalar.literal.yaml", "keyword.control.flow.block-scalar.folded.yaml"],
      "settings": { "foreground": "#449ccf", "fontStyle": "bold" }
    },
    {
      "name": "YAML Punctuation",
      "scope": ["punctuation.definition.block.sequence.item.yaml", "punctuation.separator.key-value.mapping.yaml"],
      "settings": { "foreground": "#9CA3AF" }
    },
    {
      "name": "JSON Property Names",
      "scope": ["support.type.property-name.json"],
      "settings": { "foreground": "#449ccf" }
    },
    {
      "name": "Markup Heading",
      "scope": ["markup.heading", "entity.name.section"],
      "settings": { "foreground": "#163657", "fontStyle": "bold" }
    },
    {
      "name": "Markup Bold",
      "scope": ["markup.bold"],
      "settings": { "fontStyle": "bold" }
    },
    {
      "name": "Markup Italic",
      "scope": ["markup.italic"],
      "settings": { "fontStyle": "italic" }
    },
    {
      "name": "Markup Link",
      "scope": ["markup.underline.link"],
      "settings": { "foreground": "#449ccf" }
    },
    {
      "name": "Tags (HTML/XML)",
      "scope": ["entity.name.tag"],
      "settings": { "foreground": "#163657" }
    },
    {
      "name": "Attribute Values",
      "scope": ["string.quoted.double.html", "string.quoted.single.html"],
      "settings": { "foreground": "#059669" }
    },
    {
      "name": "Regex",
      "scope": ["string.regexp"],
      "settings": { "foreground": "#DC2626" }
    },
    {
      "name": "Escape Characters",
      "scope": ["constant.character.escape"],
      "settings": { "foreground": "#7C3AED" }
    },
    {
      "name": "Punctuation",
      "scope": ["punctuation"],
      "settings": { "foreground": "#9CA3AF" }
    },
    {
      "name": "Reference / $ref",
      "scope": ["string.other.link", "markup.underline"],
      "settings": { "foreground": "#EA580C" }
    }
  ]
}
