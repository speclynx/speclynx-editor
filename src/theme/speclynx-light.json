    "titleBar.activeBackground": "#163657",
    "titleBar.activeForeground": "#FFFFFF",
    "titleBar.inactiveBackground": "#1d4570",
    "titleBar.inactiveForeground": "#7ED8F5",
    "titleBar.border": "#163657",

    "tab.activeBackground": "#FAFBFC",
