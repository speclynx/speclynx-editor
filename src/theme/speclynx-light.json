    "activityBar.border": "#163657",
    "activityBarBadge.background": "#449ccf",
    "activityBarBadge.foreground": "#FFFFFF",

    "sideBar.background": "#F3F4F6",
    "sideBar.foreground": "#1F2937",
    "sideBar.border": "#E5E7EB",
    "sideBarTitle.foreground": "#163657",
    "sideBarSectionHeader.background": "#EFF6FF",
    "sideBarSectionHeader.foreground": "#163657",

    "list.activeSelectionBackground": "#449ccf",
    "list.activeSelectionForeground": "#FFFFFF",
    "list.inactiveSelectionBackground": "#EFF6FF",
    "list.inactiveSelectionForeground": "#163657",
    "list.hoverBackground": "#F3F4F6",
    "list.highlightForeground": "#449ccf",

    "statusBar.background": "#163657",
    "statusBar.foreground": "#FFFFFF",
    "statusBar.border": "#0e2440",
