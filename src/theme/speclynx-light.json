    "badge.background": "#449ccf",
    "badge.foreground": "#FFFFFF",

    "scrollbar.shadow": "#00000015",
    "scrollbarSlider.background": "#9CA3AF40",
    "scrollbarSlider.hoverBackground": "#6B728060",
